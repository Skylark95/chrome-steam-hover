{
    "name": "Chrome Steam Hover",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": "Show Steam app details with mouse hover on a Steam link",
    "homepage_url": "https://github.com/Skylark95/chrome-steam-hover",
    "minimum_chrome_version": "40",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "background": {
        "scripts": [
            "js/vendor.min.js",
            "js/background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "http://store.steampowered.com/*"
    ],
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "js": [
            "js/vendor.min.js",
            "js/steamhover.js"
        ],
        "css": [
            "css/vendor.min.css",
            "css/steamhover.css"
        ],
        "run_at": "document_end"
    }]
}
